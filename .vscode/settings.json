// Dracula colors throughout are taken from the VS Code Dracula theme
// https://github.com/dracula/visual-studio-code/blob/master/src/dracula.yml
{
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "breadcrumbs.enabled": false,
  "cSpell.customDictionaries": {
    "custom": true, // Enable the `custom` dictionary
    "internal-terms": false, // Disable the `internal-terms` dictionary
    "project-words": {
      "addWords": true,
      "description": "Words used in this project",
      "name": "project-words",
      "path": "${workspaceRoot}/project-words.txt"
    }
  },
  "cSpell.logLevel": "Warning",
  "cSpell.showAutocompleteSuggestions": true,
  "debug.console.acceptSuggestionOnEnter": "on",
  "debug.toolBarLocation": "docked",
  "diffEditor.codeLens": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "block",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "on",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    {
      "color": "#FF79C6", // Dracula pink
      "column": 88
    }
  ],
  "editor.scrollBeyondLastLine": false,
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 4,
  "explorer.autoReveal": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": true,
  "explorer.fileNesting.enabled": false,
  "files.autoSave": "onWindowChange",
  "files.exclude": {
    "**/.git": false
  },
  "git.allowNoVerifyCommit": false,
  "git.closeDiffOnOperation": true,
  "git.enableSmartCommit": false,
  "git.pruneOnFetch": true,
  "gremlins.showInProblemPane": true,
  "indentRainbow.colors": [
    "rgba(139, 233, 253, 0.7)", // Dracula Cyan
    "rgba(80, 250, 123, 0.7)", // Dracula Green
    "rgba(255, 184, 108, 0.7)", // Dracula Orange
    "rgba(255, 121, 198, 0.7)", // Dracula Pink
    "rgba(189, 147, 249, 0.7)", // Dracula Purple
    "rgba(255, 85, 85, 0.7)", // Dracula Red
    "rgba(241, 250, 140, 0.7)" // Dracula Yellow
  ],
  "json.format.enable": false,
  "markdown.experimental.updateLinksOnFileMove.enabled": "always",
  "markdown.extension.italic.indicator": "_",
  "markdown.extension.print.theme": "dark",
  "peacock.color": "#50FA7B",
  "peacock.favoriteColors": [
    {
      "name": "Dracula Cyan",
      "value": "#8BE9FD"
    },
    {
      "name": "Dracula Green",
      "value": "#50FA7B"
    },
    {
      "name": "Dracula Orange",
      "value": "#FFB86C"
    },
    {
      "name": "Dracula Pink",
      "value": "#FF79C6"
    },
    {
      "name": "Dracula Purple",
      "value": "#BD93F9"
    },
    {
      "name": "Dracula Red",
      "value": "#FF5555"
    },
    {
      "name": "Dracula Yellow",
      "value": "#F1FA8C"
    }
  ],
  "peacock.surpriseMeFromFavoritesOnly": true,
  "peacock.surpriseMeOnStartup": true,
  "prettier.useEditorConfig": false,
  "python.analysis.typeCheckingMode": "strict",
  "python.formatting.provider": "black",
  "python.languageServer": "Jedi",
  "python.linting.banditEnabled": true,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyArgs": ["--config-file=pyproject.toml"],
  "python.linting.mypyEnabled": true,
  "python.linting.pylintArgs": ["--rcfile=.pylintrc", "tests", "loadout"],
  "python.linting.pylintEnabled": true,
  "scm.alwaysShowActions": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableBell": true,
  "todo-tree.highlights.backgroundColourScheme": [
    "#FF5555", // Dracula Red
    "#FFB86C", // Dracula Orange
    "#F1FA8C", // Dracula Yellow
    "#50FA7B", // Dracula Green
    "#8BE9FD", // Dracula Cyan
    "#FF79C6", // Dracula Pink
    "#BD93F9" // Dracula Purple
  ],
  "todo-tree.tree.buttons.scanMode": true,
  "todo-tree.tree.showCountsInTree": true,
  "vscode-pets.petSize": "medium",
  "vscode-pets.position": "explorer",
  "vscode-pets.theme": "forest",
  "window.zoomLevel": 1,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#82fba0",
    "activityBar.background": "#82fba0",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#a183fb",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#82fba0",
    "statusBar.background": "#50fa7b",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#1ef956",
    "statusBarItem.remoteBackground": "#50fa7b",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#50fa7b",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#50fa7b99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.linting.banditArgs": ["-c pyproject.toml"]
  // "python.linting.pylintPath": "/Users/kevinmccartney/Library/Caches/pypoetry/virtualenvs/loadout-BfFqeuBr-py3.10/bin/pylint"
}
